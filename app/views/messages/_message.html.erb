<div class="shadow border my-4 py-2 pl-1 p-3 rounded">
  <div class="d-flex flex-row">
    <div class="col-3">
      <small><%= l(message.created_at, format: :short) %></small>
    </div>
    <div class="col-3">
      <strong><%= message.user.email == 'default_user@example.com' ? 'Anonymous' : message.user.email %></strong>
    </div>
    <div class="col-6">
      <p style="word-wrap: break-word; white-space: pre-wrap;"><%= message.text %></p>
    </div>
  </div>
</div>
