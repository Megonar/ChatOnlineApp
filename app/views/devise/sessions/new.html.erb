<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-4 mb-4">Sign In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign In", class: "btn btn-primary" %>
        </div>
      <% end %>

      <p class="mt-3">
        <%= link_to "Forgot your password?", new_user_password_path %><br>
        Don't have an account? <%= link_to "Sign Up", new_user_registration_path %>
      </p>
    </div>
  </div>
</div>
